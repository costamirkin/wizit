  <LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".PropertiesActivity" >
 
      <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Enter store name:" />
 
      <EditText
         android:id="@+id/editTextStoreName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:ems="10" >
 
          <requestFocus />
      </EditText>
 
      <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Enter sale title:" />
 
        <EditText
           android:id="@+id/EditTextSaleTitle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:ems="10" />
 
        <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Enter sale content" />
 
        <EditText
           android:id="@+id/EditTextSaleContent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:ems="10" />
 
        <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Enter Store site" />
 
        <EditText
           android:id="@+id/EditTextSite"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:ems="10"
           android:text="http://www." />
 
        <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp">
 
            <Button
               android:id="@+id/buttonCancel"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="0dp"
               android:onClick="onCancel"
               android:text="Cancel" />
 
            <Button
               android:id="@+id/buttonOk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"
               android:onClick="onOK"
               android:text="OK" />
        </RelativeLayout>
 
</LinearLayout>